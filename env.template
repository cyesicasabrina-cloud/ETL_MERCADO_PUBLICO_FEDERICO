# Configuración del Sistema ETL - Mercado Público
# Copia este archivo como .env y configura los valores según tu entorno

# =============================================================================
# API DE MERCADO PÚBLICO
# =============================================================================

# API Key (Ticket) para autenticación con la API de Mercado Público
# Obtén tu ticket en: https://api.mercadopublico.cl/
MERCADO_PUBLICO_TICKET=BB946777-2A2E-4685-B5F5-43B441772C27

# URL base de la API de Mercado Público
MERCADO_PUBLICO_BASE_URL=https://api.mercadopublico.cl/servicios/v1/publico/licitaciones.json

# User Agent para las peticiones HTTP
MERCADO_PUBLICO_USER_AGENT=ETL-Mercado-Publico/2.0

# =============================================================================
# CONFIGURACIÓN DE CONEXIÓN
# =============================================================================

# Timeout para peticiones HTTP (segundos)
HTTP_TIMEOUT=60

# Número máximo de reintentos ante errores
MAX_RETRIES=6

# Factor de backoff exponencial para reintentos
BACKOFF_FACTOR=2.0

# Header para rate limiting
RATE_LIMIT_HEADER=Retry-After

# =============================================================================
# CONFIGURACIÓN DE ARCHIVOS
# =============================================================================

# Directorio base para archivos de datos
DATA_BASE_DIR=data

# Directorio para datos raw (originales de la API)
DATA_RAW_DIR=data/raw

# Directorio para datos procesados (clean y requested)
DATA_CLEAN_DIR=data/clean

# Nombre de la base de datos SQLite
SQLITE_DB_NAME=mp.sqlite

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Nombre del archivo de log
LOG_FILE=licitaciones.log

# Formato de timestamp en logs
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# =============================================================================
# CONFIGURACIÓN DE PROCESAMIENTO
# =============================================================================

# Tamaño máximo de lote para procesamiento
BATCH_SIZE=1000

# Habilitar procesamiento en paralelo
ENABLE_PARALLEL_PROCESSING=false

# Número de workers para procesamiento paralelo
PARALLEL_WORKERS=4

# =============================================================================
# CONFIGURACIÓN DE VALIDACIÓN
# =============================================================================

# Habilitar validación estricta de campos
ENABLE_STRICT_VALIDATION=true

# Tolerancia a campos faltantes (porcentaje)
FIELD_VALIDATION_TOLERANCE=10

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================

# Habilitar métricas de rendimiento
ENABLE_PERFORMANCE_METRICS=true

# Intervalo de reporte de métricas (segundos)
METRICS_REPORT_INTERVAL=30

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Habilitar validación de certificados SSL
VERIFY_SSL=true

# Timeout para verificación SSL
SSL_TIMEOUT=30

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Modo de desarrollo (habilita logs adicionales)
DEVELOPMENT_MODE=false

# Habilitar debugging detallado
DEBUG_MODE=false

# Mostrar información sensible en logs
SHOW_SENSITIVE_INFO=false
